<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.9"
            android:foregroundGravity="center|center_vertical|center_horizontal"
            android:gravity="center|center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/textView363"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Торговая точка"
                android:textSize="16dp"
                android:gravity="center|center_horizontal|left"
                android:foregroundGravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center|left"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/textView362"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Торговая точка"
                android:textSize="16dp"
                android:gravity="center|center_horizontal|left"
                android:foregroundGravity="center_vertical|center_horizontal|left"
                android:layout_gravity="center|left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>