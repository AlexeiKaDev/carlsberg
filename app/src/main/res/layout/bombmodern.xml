<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_gravity="center"
        android:foregroundGravity="center|center_vertical|center_horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:gravity="center|center_vertical|center_horizontal"
            android:id="@+id/radio1"
            android:foregroundGravity="center|center_vertical|center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView357"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Размещение POSM в ТТ"
                android:id="@+id/id1"
                android:checked="true"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:enabled="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView328"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Фэйсов в Доле конкурента (хо/полка)"
                android:id="@+id/id2"
                android:gravity="center|center_vertical|center_horizontal"
                android:checked="false"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView329"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Фэйсов на доп. стеллаже (согласно бренд приоритетам)"
                android:id="@+id/id3"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView330"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Скидка за счёт магазина мин. 5 процентов (с выделением цветным ценником)"
                android:id="@+id/id4"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView331"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Другое (по согласованию с СМТК)"
                android:id="@+id/id5"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView332"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

        </RadioGroup>
    </ScrollView>

</LinearLayout>
