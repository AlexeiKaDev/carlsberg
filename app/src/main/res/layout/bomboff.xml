<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_gravity="center"
        android:foregroundGravity="center|center_vertical|center_horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:gravity="center|center_vertical|center_horizontal"
            android:id="@+id/radio1"
            android:foregroundGravity="center|center_vertical|center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView357"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 скю в прикасовой зоне (только бренд приоритеты)"
                android:id="@+id/id1"
                android:checked="true"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:enabled="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView328"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Палет горка (мин 3 упаковки)"
                android:id="@+id/id2"
                android:gravity="center|center_vertical|center_horizontal"
                android:checked="false"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView329"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Золотая полка (киоск, полка в магазине, не менее 5ти фейсов)"
                android:id="@+id/id3"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView330"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Эксклюзивность пэтов (только не в нашем эксклюзиве)"
                android:id="@+id/id4"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView331"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 фэйсов в ХО (или 50 в частном ХО при отсутствии других пивных ХО)"
                android:id="@+id/id5"
                android:checked="false"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView332"
                android:textColor="@color/carlgreen"
                android:singleLine="false"
                android:background="@drawable/border" />

        </RadioGroup>
    </ScrollView>

</LinearLayout>
